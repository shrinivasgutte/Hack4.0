<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"

    tools:showIn="@layout/activity_family_tab1__patient_ditails">


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<!-- #2696a3 -->
        <LinearLayout
            android:layout_marginBottom="6dp"
            android:background="@color/colorPrimary_2"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="119dp">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/download"
                app:civ_border_width="2dp"
                app:civ_border_color="#034561"/>


            <LinearLayout

                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_width="230dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/member_name"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:layout_width="230dp"
                    android:layout_height="30dp"
                    android:text="member Name"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"/>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#fff"></LinearLayout>

                <TextView
                    android:id="@+id/users_type"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:layout_width="230dp"
                    android:layout_height="30dp"
                    android:textSize="14dp"
                    android:fontFamily="sans-serif-condensed"/>

            </LinearLayout>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                   <!-- <TextView
                        android:textStyle="italic"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:hint="Relation :"
                        android:textSize="12dp"/>
                    <TextView
                        android:textColor="@color/colorPrimary_2"
                        android:text="relation"
                        android:layout_marginLeft="4dp"
                        android:gravity="left"
                        android:textSize="14dp"
                        android:id="@+id/relation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />-->


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textStyle="italic"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="right"
                        android:hint="Date of Birth"
                        android:textSize="10dp"/>

                    <TextView
                        android:textColor="@color/colorPrimary_2"
                        android:clickable="false"

                        android:gravity="right|center"
                        android:text="dob"
                        android:layout_marginRight="8dp"
                        android:textSize="12dp"
                        android:id="@+id/dob"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>



            </LinearLayout>
            <TextView
                android:layout_marginTop="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="12dp"
                android:textStyle="italic"/>
            <TextView
                android:text="Address"
                android:textColor="@color/colorPrimary_2"
                android:id="@+id/address"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusableInTouchMode="false"
                android:gravity="center_vertical"
                android:textSize="14dp" />
            <TextView
                android:textStyle="italic"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contact No."
                android:textSize="12dp"/>


            <TextView
                android:textColor="@color/colorPrimary_2"
                android:text="Contactno"
                android:clickable="false"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:cursorVisible="false"
                android:focusableInTouchMode="false"
                android:gravity="center_vertical"
                android:textSize="14dp"
                android:id="@+id/member_phno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textStyle="italic"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textSize="12dp"/>


            <TextView
                android:text="email"
                android:textColor="@color/colorPrimary_2"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusableInTouchMode="false"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:textSize="14dp"
                android:id="@+id/member_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textStyle="italic"
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Gender"
                        android:textSize="12dp"/>
                    <TextView
                        android:textColor="@color/colorPrimary_2"
                        android:text="Gender"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center_vertical"
                        android:textSize="14dp"
                        android:layout_marginLeft="2dp"
                        android:id="@+id/gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textStyle="italic"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="right"
                        android:hint="Blood Group"
                        android:textSize="10dp"/>

                    <TextView
                        android:textColor="@color/colorPrimary_2"
                        android:clickable="false"
                        android:gravity="right|center"
                        android:layout_marginRight="8dp"
                        android:textSize="12dp"
                        android:text="blood"
                        android:id="@+id/member_blood"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>


            </LinearLayout>
            <Button
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="10dp"
                android:text="View more"
                android:id="@+id/seemore_btn"
                android:background="@color/colorPrimary_2"
                android:textColor="#FFF"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>


