<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.techiessquad.mrtn.patient.DoctorTab1_recentDitails"
    tools:showIn="@layout/activity_doctor_tab1_recent_ditails">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
android:layout_marginStart="2dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<!-- #2696a3 -->
        <LinearLayout
            android:layout_marginBottom="6dp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="119dp">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/download"
                app:civ_border_width="2dp"
                app:civ_border_color="#034561"/>


            <LinearLayout

                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_width="230dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/doctor_name"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:layout_width="230dp"
                    android:layout_height="30dp"
                    android:text="Doctor Name"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"/>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#fff"></LinearLayout>

                <TextView
                    android:id="@+id/doctor_id"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:layout_width="230dp"
                    android:layout_height="30dp"
                    android:text="Doctor id"
                    android:textSize="14dp"

                    android:fontFamily="sans-serif-condensed"/>

            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/lay"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textStyle="italic"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:hint="Speciality"
                        android:textSize="12dp"/>
                    <TextView
                        android:textColor="@color/colorPrimaryDark"
                        android:text="spe"
                        android:layout_marginLeft="4dp"

                        android:gravity="left"

                        android:textSize="14dp"
                        android:id="@+id/speciality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textStyle="italic"


                        android:gravity="end"
                        android:layout_marginRight="26dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:hint="Meeted Date"
                        android:textSize="10dp"/>

                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:clickable="false"

                        android:gravity="right|center"
                        android:text="00/00/2017"
                        android:layout_marginRight="20dp"
                        android:textSize="11dp"
                        android:id="@+id/casep_date"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>


            </LinearLayout>
            <TextView
                android:textStyle="italic"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Qualification"
                android:textSize="12dp"/>


            <TextView
                android:text="Qualification"
                android:textColor="@color/colorPrimary"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusableInTouchMode="false"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:textSize="14dp"
                android:id="@+id/quali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"/>

            <TextView
                android:textStyle="italic"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contact No."
                android:textSize="12dp"/>


            <TextView
                android:textColor="@color/colorPrimary"
                android:text="Contactno"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusableInTouchMode="false"
                android:gravity="center_vertical"
                android:textSize="14dp"
                android:layout_marginLeft="2dp"
                android:id="@+id/doctor_phno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textStyle="italic"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textSize="12dp"/>


            <TextView
                android:text="email"
                android:textColor="@color/colorPrimary"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusableInTouchMode="false"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:textSize="14dp"
                android:id="@+id/doctor_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"/>

            <TextView
                android:textStyle="italic"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Gender"
                android:textSize="12dp"/>


            <TextView
                android:textColor="@color/colorPrimary"
                android:text="Gender"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusableInTouchMode="false"
                android:gravity="center_vertical"
                android:textSize="14dp"
                android:layout_marginLeft="2dp"
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="italic"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Blood Group"
                android:textSize="12dp"/>


            <TextView
                android:textColor="@color/colorPrimary"
                android:text="Gender"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusableInTouchMode="false"
                android:gravity="center_vertical"
                android:textSize="14dp"
                android:layout_marginLeft="2dp"
                android:id="@+id/doctor_blood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />














            <TextView
                android:background="@color/colorPrimaryDark"
                android:textColor="#fff"
                android:textStyle="italic"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_margin="20dp"
                android:padding="2dp"
                android:layout_gravity="center"
                android:text="Hospital Information"
                android:textSize="12dp"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hospital Name"
                        android:gravity="left"
                        android:textSize="10dp"
                        android:textStyle="italic"/>
                    <TextView
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:text="Ajit Shitole"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusableInTouchMode="false"
                        android:textSize="12dp"
                        android:id="@+id/hospital_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>
                <LinearLayout
                    android:layout_marginEnd="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginEnd="6dp"
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="end"
                        android:text="Emergency No."
                        android:textSize="10dp"
                        android:textStyle="italic"/>

                    <TextView

                        android:textColor="@color/colorPrimaryDark"
                        android:text="0000000000"
                        android:gravity="end"
                        android:textSize="12dp"
                        android:id="@+id/emergencyno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
            android:layout_marginLeft="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginTop="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact No."
                        android:textSize="10dp"
                        android:textStyle="italic"/>

                    <TextView
                        android:gravity="end"
                        android:layout_gravity="right"
                        android:layout_marginEnd="28dp"
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Working Hours"
                        android:textSize="10dp"
                        android:textStyle="italic"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:textColor="@color/colorPrimaryDark"
                        android:text="Contactno"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center_vertical"
                        android:textSize="12dp"
                        android:id="@+id/contactno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textColor="@color/colorPrimaryDark"
                        android:text="00Hrs"
                        android:gravity="end"
                        android:layout_gravity="right"
                        android:layout_marginEnd="52dp"
                        android:textSize="12dp"
                        android:id="@+id/workinghrs"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />


                </LinearLayout>

                <TextView
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textSize="10dp"
                    android:textStyle="italic"/>
                <TextView
                    android:text="Address"
                    android:textColor="@color/colorPrimaryDark"
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center_vertical"
                    android:textSize="12dp" />






            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    </ScrollView>
    <ProgressBar
        android:layout_gravity="center"
        android:id="@+id/progressBar_cyclic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="50dp"

        android:minWidth="50dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>


