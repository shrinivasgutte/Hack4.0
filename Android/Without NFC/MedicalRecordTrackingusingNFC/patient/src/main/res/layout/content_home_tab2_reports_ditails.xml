<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.techiessquad.mrtn.patient.HomeTab2_reportsDitails"
    tools:showIn="@layout/activity_home_tab2_reports_ditails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textStyle="italic"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:hint="Type"
                    android:textSize="12dp"/>

                <TextView
                    android:id="@+id/description_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="2dp"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusableInTouchMode="false"
                    android:gravity="left"
                    android:text="desc type"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14dp"
                   />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textStyle="italic"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_marginRight="40dp"
                    android:layout_gravity="right"
                    android:hint="Date"
                    android:textSize="12dp"/>

                <TextView
                    android:textColor="@color/colorPrimary"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusableInTouchMode="false"
                    android:gravity="right|center"
                    android:text="date"
                    android:layout_marginRight="8dp"
                    android:textSize="13dp"
                    android:id="@+id/description_date"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:textStyle="italic"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Report Name"
            android:textSize="12dp"/>


        <TextView
            android:textStyle="bold"
            android:text="Report name"
            android:textColor="@color/colorPrimary"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusableInTouchMode="false"
            android:layout_marginLeft="4dp"
            android:gravity="center_vertical"
            android:textSize="14dp"
            android:id="@+id/report_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"/>


        <TextView
            android:textStyle="italic"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Doctor"
            android:textSize="12dp"/>


        <TextView
            android:text="doctor_name"
            android:textColor="@color/colorPrimary"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusableInTouchMode="false"
            android:layout_marginLeft="4dp"
            android:gravity="center_vertical"
            android:textSize="14dp"
            android:id="@+id/doctor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"/>

        <TextView
            android:textStyle="italic"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lab Name"
            android:textSize="12dp"/>


        <TextView
            android:textColor="@color/colorPrimary"
            android:text="Lab Name"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical"
            android:textSize="14dp"
            android:layout_marginLeft="2dp"
            android:id="@+id/lab_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textStyle="italic"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description :"
            android:textSize="12dp"/>


        <TextView
            android:background="@drawable/description_style"
            android:padding="2dp"
            android:textColor="@color/colorPrimary"
            android:text="des"
            android:singleLine="false"
            android:textSize="12dp"
            android:layout_marginLeft="2dp"
            android:id="@+id/description"
            android:fontFamily="sans-serif-light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <View
            android:layout_width="match_parent"
            android:background="@color/colorPrimaryDark"
            android:layout_height="5dp">
        </View>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <GridView
                android:numColumns="2"
                android:id="@+id/grid"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
