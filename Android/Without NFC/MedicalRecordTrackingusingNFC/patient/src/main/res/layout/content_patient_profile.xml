<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.techiessquad.mrtn.patient.PatientProfile"
    tools:showIn="@layout/activity_patient_profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_margin="8dp"
            android:background="#1cc4b6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/download"
                app:civ_border_width="2dp"
                app:civ_border_color="#034561"/>

            <TextView
                android:id="@+id/p_name"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:text="Android Studio"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:layout_gravity="center"
                android:textColor="#fff"
                android:gravity="center"
                android:layout_marginBottom="9dp"
                android:id="@+id/p_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="android.studio@android.com" />

        </LinearLayout>

        <TextView
            android:textStyle="italic"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:hint="Contact No."
            android:textSize="10dp"/>

        <TextView
            android:id="@+id/contact_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusableInTouchMode="false"
            android:gravity="left"
            android:text="lab_name"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textStyle="italic"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:hint="Email"
                    android:textSize="10dp"/>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="4dp"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:id="@+id/email"
                    android:focusableInTouchMode="false"
                    android:gravity="left"
                    android:text="Email"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12dp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textStyle="italic"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="right"
                    android:hint="Date Of Birth"
                    android:textSize="10dp"/>

                <TextView
                    android:textColor="@color/colorPrimary"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusableInTouchMode="false"
                    android:gravity="right|center"
                    android:text="date"
                    android:layout_marginRight="8dp"
                    android:textSize="11dp"
                    android:id="@+id/dob"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:textStyle="italic"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:textSize="10dp"/>


        <TextView
            android:text="address"
            android:textColor="@color/colorPrimary"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusableInTouchMode="false"
            android:layout_marginLeft="4dp"
            android:gravity="center_vertical"
            android:textSize="12dp"
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"/>

        <TextView
            android:textStyle="italic"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Aadhar No."
            android:textSize="10dp"/>


        <TextView
            android:text="aadhar"
            android:textColor="@color/colorPrimary"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusableInTouchMode="false"
            android:layout_marginLeft="4dp"
            android:gravity="center_vertical"
            android:textSize="12dp"
            android:id="@+id/aadhar_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"/>
        <TextView
            android:textStyle="italic"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Gender"
            android:textSize="10dp"/>


        <TextView
            android:text="gender"
            android:textColor="@color/colorPrimary"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusableInTouchMode="false"
            android:layout_marginLeft="4dp"
            android:gravity="center_vertical"
            android:textSize="12dp"
            android:id="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textStyle="italic"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:hint="Registration Date"
                    android:textSize="10dp"/>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="4dp"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:id="@+id/regdate"
                    android:focusableInTouchMode="false"
                    android:gravity="left"
                    android:text="regdate"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12dp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textStyle="italic"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="right"
                    android:hint="Blood Group"
                    android:textSize="10dp"/>

                <TextView
                    android:textColor="@color/colorPrimary"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusableInTouchMode="false"
                    android:gravity="right|center"
                    android:text="blood"
                    android:layout_marginRight="8dp"
                    android:textSize="11dp"
                    android:id="@+id/blood"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textStyle="italic"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:hint="State"
                    android:textSize="10dp"/>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="4dp"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:id="@+id/state"
                    android:focusableInTouchMode="false"
                    android:gravity="left"
                    android:text="state"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12dp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textStyle="italic"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="right"
                    android:hint="City"
                    android:textSize="10dp"/>

                <TextView
                    android:textColor="@color/colorPrimary"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusableInTouchMode="false"
                    android:gravity="right|center"
                    android:text="blood"
                    android:layout_marginRight="8dp"
                    android:textSize="11dp"
                    android:id="@+id/city"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:textStyle="italic"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Allergies"
            android:textSize="10dp"/>


        <TextView
            android:text="allergies"
            android:textColor="@color/colorPrimary"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusableInTouchMode="false"
            android:layout_marginLeft="4dp"
            android:gravity="center_vertical"
            android:textSize="12dp"
            android:id="@+id/allergies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"/>


    </LinearLayout>
</RelativeLayout>
